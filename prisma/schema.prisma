generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          String   @id
  title           String
  priceAmount     Float
  stock           Stock?
}

model Stock {
  id           String   @id
  quantityAvailable Int
  status            Status   @default(OUT_OF_STOCK)
  book              Book     @relation(fields: [bookId], references: [id],  onDelete: Cascade)
  bookId            String   @unique
}

enum Status {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}